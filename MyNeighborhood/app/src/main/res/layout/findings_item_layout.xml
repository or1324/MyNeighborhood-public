<?xml version="1.0" encoding="utf-8"?>
<com.amitbartfeld.myneighborhood.graphic_items.FindingsGraphicItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_background"
    android:layoutDirection="ltr"
    android:padding="15dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.6"
        android:orientation="vertical" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/is_finding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:background="@drawable/found_background"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guideline8"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_bitmap"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/is_finding"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guideline8"
        android:scaleType="centerInside" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/guideline8"
        app:layout_constraintTop_toBottomOf="@id/image_bitmap"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:maxLines="1"
        android:autoLink="phone"
        android:textColor="#AF3D00"
        android:textColorLink="#AA6713"
        android:gravity="center"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline8" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:maxLines="1"
        android:textColor="#AF3D00"
        android:gravity="center"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/phone_number" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textAlignment="textStart"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/phone_number"
        app:layout_constraintBottom_toTopOf="@id/location"
        app:layout_constraintRight_toLeftOf="@id/guideline8"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textAlignment="textStart"
        android:layout_marginTop="15dp"
        android:textColor="#CC121F2B"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/date"
        app:layout_constraintRight_toLeftOf="@id/guideline8"
        app:layout_constraintLeft_toLeftOf="parent"/>

</com.amitbartfeld.myneighborhood.graphic_items.FindingsGraphicItem>